#!/bin/bash
set -e -x

trap do_chown exit

source $(dirname $(which $0))/build-common

setup_dockerfile()
{
    if [ ! -e Dockerfile ]; then
        cat > Dockerfile << "EOF"
FROM rancher/docker-dind-base:latest
COPY ./scripts/bootstrap /scripts/bootstrap
RUN /scripts/bootstrap
WORKDIR /source
EOF
    fi
}

do_chown()
{
    docker run --rm -v $(pwd):/source debian chown -R "$(id -u):$(id -g)" /source
}

run_in_docker()
{
    LABEL=$(git rev-parse --abbrev-ref HEAD)
    IMAGE="build-$(basename $(pwd)):$LABEL"

    if [ -e .privileged ]; then
        PRIVILEGED="--privileged"
    fi
    docker build -t $IMAGE .
    docker run ${DOCKER_ARGS} ${PRIVILEGED} --rm -v $(pwd):/source $IMAGE "$@"
}

goto_root
setup_dockerfile

DOCKER_ARGS="-it"

case $(uname -s) in
    'Darwin')
        READLINK_CMD=greadlink
        ;;
    *)
        READLINK_CMD=readlink
        ;;
esac

while [[ "$1" =~ -.* && "$1" != "--" ]]; do
    DOCKER_ARGS="${DOCKER_ARGS} $1"
    shift 1
done

if [ "$1" = "--" ]; then
    shift 1
elif [ -f "$1" ] && [ -x "$1" ]; then
    ARG=$($READLINK_CMD -f $1)
    shift 1
else
    ARG=/source/scripts/$1
    shift 1
fi

run_in_docker $ARG "$@"
